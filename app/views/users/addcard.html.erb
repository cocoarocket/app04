<% provide(:title, 'добавление пропуска') %>
<h1>добавление пропуска</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@new_user, :html => { :multipart => true }) do |f| %>
			<%= render 'shared/error_messages' %>

			<%= f.label "имя" %>
			<%= f.text_field :name %>

			<%= f.label "табельный номер" %>
			<%= f.text_field :tabel %>

			<%= f.label "назначение пропуска" %>
			<%= f.text_field :secure_type %>

			<%= f.label "фотография" %>
			<%= f.file_field :avatar %>

			<p><%= f.submit "добавить", class: "btn btn-primary" %></p>
		<% end %>
	</div>
</div>