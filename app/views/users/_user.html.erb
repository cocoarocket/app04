<li id="user-line-id-<%= user.id %>" class="users-line" onclick="$.open_user_card('#user-line-id-<%= user.id %>')">
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to "delete", user, :style => "float:right" ,method: :delete,data: { confirm: "You sure?" } %>
    <%= link_to "edit", user, :style => "float:right" %>
    <%= link_to "print", user, :style => "float:right" %>
  <% end %>

  <div id="print-body-<%= user.id %>" class="user-card user-card-closed">
		<div id="print-id-<%= user.id %>">
			<div class="content-print-card visible-print">
				<div class="print-card-head">
					<div style="font-family: Verdana, Geneva, sans-serif; font-size: 1.25em; text-align:center; font-weight:bold;"><%= user.secure_type %></div>
					<div style="font-size:12px; text-align:right;">Верхняя Салда</div>
				</div>

				<div class="print-card-body">
					<%  if user.avatar? %>
						<div class="user-avatar">
							<%= image_tag user.avatar.url, size: "105x135" %>
						</div>
					<% end %>
					<div style="font-size:12px; text-align:right; float:right"><%= user.name %></div>
				</div>

				<div class="print-card-foot">
					<div style="font-family: Verdana, Geneva, sans-serif; font-size: 1.25em; text-align:right; font-weight:bold; color:#FFF;"><%= user.tabel %></div>
				</div>

			</div>

		</div>

		<div style="margin-top:20px;">
			<button class="btn btn-primary" onclick="print()">Print</button>
		</div>
  </div>
</li>
