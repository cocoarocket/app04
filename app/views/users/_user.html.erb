<li id="user-line-id-<%= user.id %>" class="users-line" onclick="$.open_user_card('#user-line-id-<%= user.id %>')">
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to "delete", user, :style => "float:right" ,method: :delete,data: { confirm: "You sure?" } %>
    <%= link_to "edit", user, :style => "float:right" %>
    <%= link_to "print", user, :style => "float:right" %>
  <% end %>

  <div id="print-body-<%= user.id %>" class="user-card user-card-closed">
    <aside class="span4">
      <section>
        <h1><%= user.name %></h1>
      </section>
      <section class="user-control-panel">
        <a href="#myModal-<%= user.id %>" role="button" class="btn btn-primary" data-toggle="modal">печать</a>
      </section>
    </aside>
  </div>

</li>

<div id="myModal-<%= user.id %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel"><%= user.name %></h3>
  </div>
  <div class="modal-body">
    <p>карточка</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary">Print</button>
  </div>
</div>
